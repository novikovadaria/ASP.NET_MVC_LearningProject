@model CatViewModel

<h1>Add</h1>
<hr></hr>
<div class="row">
    <div class="col-6">

        <div class="card">

            <div  class="card-header">
                <h5>Add a new cat</h5>
                <div  class="card-body">
                    <form asp-controller="HelloWorld" asp-action="CreatCat" method="post">
                        <div class="mb-3">
                            <label class="form=lable">Cat's name</label>
                            <input asp-for=Name type="text" class="form-control"/>
                        </div>

                        <div class="mb-3">
                            <label class="form=lable">Cat's Age</label>
                            <input asp-for=Age type="number" class="form-control"/>
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>

                    <div class="card-footer">

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
